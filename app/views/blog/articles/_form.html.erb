<%= simple_form_for(@article, wrapper: :horizontal_form) do |f| %>
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :content %>
      <%= f.hidden_field :author_id, value: current_user.try(:id) %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Save" %>
    </div>
<% end %>
